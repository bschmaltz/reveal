<h1><%= @user['username']%></h1>
<br />
<%if @user['id']==current_user['id'] %>
  <div id="hidden-posts">
    <h2>Hidden Posts</h2>
    <% @user_posts.each do |post| %>
      <% if !post['revealed'] %>
        <div class="hidden-post">
          <%= post['username'] %>:
          <br />
          <%= post['content'] %>
        </div>
      <% end %>
    <% end %>
  </div>
  <br />
  <br />
<% end %>
<div id="revealed-posts">
  <h2>Public Posts</h2>
  <% @user_posts.each do |post| %>
    <% if post['revealed'] %>
      <div class="reavealed-post">
        <%= post['username'] %>:
        <br />
        <%= post['content'] %>
      </div>
    <% end %>
  <% end %>
</div>
